<%= form_for(:listing, :url => {:action => 'create'}) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="category">Category</label>
    <br />
    <select name="category">
        <% @categories.each do |category| %>
        <option value="<%= category.id %>">
            <%= category.category_name %>
        </option>
        <% end %>
    </select>

  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :submissiondate %><br />
    <%= f.date_select :submissiondate %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :contactphone %><br />
    <%= f.text_field :contactphone %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
