<h1>Listing categories</h1>

<table>
  <tr>
    <th>Category name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.category_name %></td>
    <td><%= category.description %></td>
    <td><%= link_to 'Show', {:action => 'show', :id => category.id} %></td>
    <td><%= link_to 'Edit', {:action => 'edit', :id => category.id} %></td>
    <td><%= link_to 'Destroy', {:action => 'delete', :id => category.id}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

